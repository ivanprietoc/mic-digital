  /billing/subscribers/{MSISDN}/status:
    get:
      summary: Get Status of Subscriber by MSISDN
      description: |
        Returns the status of a subscriber
      operationId: GetStatusOfSubscriberByMSISDN
      parameters:
        - name: MSISDN
          in: path
          description: International Identifiable mobile phone number
          required: true
          type: string
      responses:
        200:
          description: Status was successfully retrived 
          schema:
            $ref: '#/definitions/Status'
        403:
          description: Forbidden. Check `error.message` for details
          schema:
            $ref: '#/definitions/errorBody'
        404:
          description: the specified `MSISDN` was not found
          schema:
            $ref: '#/definitions/errorBody'            
        default:
          description: unexpected error
          schema:
            $ref: '#/definitions/errorBody'
    put:
      summary: Update Status of Subscriber by MSISDN
      description: |
        Update the status of a subscriber due to stolen SIM card, stolen phone or any other incident that requires the user to block the service.
      operationId: UpdateStatusOfSubscriberByMSISDN
      parameters:
        - name: MSISDN
          in: path
          description: International Identifiable mobile phone number
          required: true
          type: string
        - name: body
          in: body
          required: true
          schema:
            $ref: '#/definitions/StatusChangeRequest'          
      responses:
        200:
          description: Status was successfully updated 
          schema:
            $ref: '#/definitions/Status'
        403:
          description: Forbidden. Check `error.message` for details
          schema:
            $ref: '#/definitions/errorBody'
        404:
          description: the specified `MSISDN` was not found
          schema:
            $ref: '#/definitions/errorBody'            
        default:
          description: unexpected error
          schema:
            $ref: '#/definitions/errorBody'

#Transparency              
  /billing/subscribers/{msisdn}/usage/data/hourlybyapp:
    get:
      summary: Get Data Usage By MSISDN Per Hour and App
      description: Obtain a list of consumed services per hour.
      operationId: GetDataUsageByMSISDNPerHourAndApp
      parameters:
        - name: msisdn
          in: path
          description: Unique identifier for the customer
          required: true
          type: string
        - name: startDate
          in: query
          description: "(optional, ISO8601 datetime) Start date for query period, if not specified it should default to 24 hours ago, from current system datetime."
          required: false
          type: string  
        - name: endDate
          in: query
          description: "(optional, ISO8601 datetime) End Date for query period, if not specified, it should default to current system datetime."
          required: false
          type: string 

            
      responses:
        200:
          description: Successfull
          schema:
            $ref: '#/definitions/getUsagePerHourResponse'
        400:
          description: Invalid Parameters
          schema:
            $ref: '#/definitions/error'
        404:
          description: Not found
          schema:
            $ref: '#/definitions/error'
        500:
          description: Server Error
          schema:
            $ref: '#/definitions/error'
        default:
          description: unexpected error
          schema:
            $ref: '#/definitions/error'

  /billing/subscribers/{msisdn}/usage/data/percentagebyapp:
    get:
      summary: Get Data Usage Percentage By MSISDN Per App
      description: Obtain a list of consumed services percentage.
      operationId: GetDataUsagePercentageByMSISDNPerApp
      parameters:
        - name: msisdn
          in: path
          description: Unique identifier for the customer
          required: true
          type: string
        - name: startDate
          in: query
          description: "(optional, ISO8601 datetime) Start date for query period, if not specified it should default to 24 hours ago, from current system datetime."
          required: false
          type: string  
        - name: endDate
          in: query
          description: "(optional, ISO8601 datetime) End Date for query period, if not specified, it should default to current system datetime."
          required: false
          type: string  
        - name: resolution
          in: query
          description: "DAY means 1 record per hour per App/protocol and HOUR means 1 record per day per App/protocol (default if not specified)."
          required: false
          type: string  

      responses:
        200:
          description: Successfull
          schema:
            $ref: '#/definitions/getUsagePercentageResponse'
        400:
          description: Invalid Parameters
          schema:
            $ref: '#/definitions/error'
        404:
          description: Not found
          schema:
            $ref: '#/definitions/error'
        500:
          description: Server Error
          schema:
            $ref: '#/definitions/error'
        default:
          description: unexpected error
          schema:
            $ref: '#/definitions/error'
            


