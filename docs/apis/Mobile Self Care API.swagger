definitions:

  Status:
    required:
      - code
      - assetType
    properties:
      code:
        type: string
        description: Status Code. May be alphanumeric
      description:
        type: string
        description: Human readable status if needed.
      assetType:
        type: string
        description: Asset which status is being returned        

  StatusChangeRequest:
    type: object
    required:
      - code
      - assetType
    properties:
      code:
        type: string
        description: Status Code. May be alphanumeric
        enum: [Active, Blocked]
      assetType:
        type: string
        description: Asset which status is being updated
        enum: [SIM, IMEI, SIM_IMEI]
      updateReason:
        type: string
        description: Reson of status being updated
      customerId:
        type: string
        description: Customer unique identifier, usually national identification number or company tax payer number
      documentType:
        type: string
        description: Defines if customerId es a National Id, Tax Payer Number, Passport, etc.
      name:
        type: string
        description: First Name, Comapny Name or Full Name of the Customer
      lastName:
        type: string
        description: Last Name of the Custoemr

  FavoriteNumberList:
    type: array
    items:
      $ref: "#/definitions/FavoriteNumber"

  FavoriteNumber:
    type: object
    required:
      - PhoneNumber    
    properties:
      PhoneNumber:
        type: string
        description: Phone Number that is considered a Favorite Number
        example: "75007493"
      ExpirationDate:
        type: string
        format: date        
        description: Optional value if this number have an expiration date
      Label:
        type: string
        description: Optional value if this number has a description or user defined label
      PlanCode:
        type: string
        description: Optional plan code or number to which this PhoneNumber is being added

  OfferList:
    type: array
    items:
      $ref: "#/definitions/Offer"

  Offer:
    type: object
    required:
      - OfferId
      - OfferName
    properties:
      OfferId:
        type: string
        description: Unique Id of the offering, needed to complete the order.
        example: "104"
        #vasOffer.packageId
      OfferName:
        type: string
        description: Short name for the offer
        example: "Mas Internet 500MB"
        #vasOffer.name
      Description:
        type: string
        description: Explanation to the user.
        example: "Has seleccionado MAS INTERNET de 500 MB - $5.46 con un costo de $4.75 ISV no incluido. Este paquete expirara en tu fecha de corte."
        #vasOffer.description
      Validity:
        type: string
        description: The quantitative number or period for which the offer is valid.
        example: "1"
        #vasOffer.validityNumber
      ValidityUnit:
        type: string
        description: The period unit. Could be Hour, Day, Week, Month, Megabytes, Gigabytes, Slots
        example: "Month"
        #vasOffer.validityType
      CategoryName:
        type: string
        description: The name of main category of this offer
        example: "Paquetigos Datos"
        #vasOffer.category        
      SubCategoryName:
        type: string
        description: The name of the secondary category of this offer
        example: "Internet"
        #vasOffer.subcategory
      Rank:
        type: number
        description: This value is used to present the offers in a sorted order.
        example: 0
        #vasOffer.priority
      amount:
        type: number
        format: double
        example: 5.46
        #vasOffer.cost
      currencyId:
        type: string
        description: This is the ISO Id of the currency
        example: "USD"
        #vasOffer.currency
      AcquisitionMethodList:
        type: array
        $ref: "#/definitions/AcquisitionMethod"
        #vasOffer.acquisitionMethods[]
  AcquisitionMethod:
    type: object
    required:
      - AcquisitionMethodId
      - AcquisitionMethodName
    properties:
      AcquisitionMethodId:
        type: number
        description: Unique Id of the Acquisition Method
        example: 2
        #vasOffer.acquisitionMethods[].paymentMethodId
      AcquisitionMethodName:
        type: string
        description: Short name for the Acquisition Method. Could be Next Invoice or Prepaid
        example: "NEXT_INVOICE"
        #vasOffer.acquisitionMethods[].paymentMethodName    

  PlanList:
    type: array
    items:
      $ref: "#/definitions/Plan"

  Plan:
    type: object
    required:
      - planId
      - planName
      - monthlyAmount
    properties:
      planId:
        type: string
        description: Unique Id of the plan
        example: "862"
        #idPlan
      planName:
        type: string
        description: Short name for the plan
        example: "Todo Sin Limites $99.99 Mixto"
        #planDescription
      monthlyAmount:
        type: number
        description: Monthly base amount that customer pays for this plan
        example: 99.99
        #amount
      planDataInMB:
        type: number
        description: | 
          Monthly megabytes included in this plan. 
          This value is also included in the ProdutOffering array but must be reflected in this value so megabytes can be compared,
          charted and better communicated to the customer.
        example: 99.99
      currencyId:
        type: string
        description: This is the ISO Id of the currency
        example: "USD"
        #currency
      status:
        type: string
        description: Status of this plan, may help build the UX
