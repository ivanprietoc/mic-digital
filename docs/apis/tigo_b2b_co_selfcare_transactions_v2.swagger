  #postEnableDisableAvailableServices
  /customers/services:
    post:
      summary: Enables the habilitation or disabling of services to a msisdn.
      description: Taking as initial parameter the msisdn of the client allows to perform the habilitation or disablement of services to a msisdn.
      operationId: postEnableDisableAvailableServices
      tags:
        - services
      parameters:
        - $ref: "#/parameters/servicesParameters"
        - $ref: "#/parameters/authorization"
      responses:
        200:
          description: Successful response
          schema:
            $ref: '#/definitions/servicesAvailable'
        400:
          description: Bad Request.
          schema:
            $ref: '#/definitions/errorBody'
        401:
          description: Unauthorized.
          schema:
            $ref: '#/definitions/errorBody'
        404:
          description: Not Found.
          schema:
            $ref: '#/definitions/errorBody'
        default:
          description: Unhandled resource
          schema:
            $ref: '#/definitions/errorBody'

  #getActiveServicesByMsisdn
  /customers/{msisdn}/services:
    get:
      summary: Returns the status of services enabled for a msisdn.
      description: Taking as initial parameter the msisdn returns the status of enabled services.
      operationId: findActiveServicesByMsisdn
      parameters:
        - $ref: "#/parameters/msisdn"
        - $ref: "#/parameters/authorization"
      responses:
        200:
          description: Successful response
          schema:
            $ref: '#/definitions/services'
        400:
          description: Bad Request.
          schema:
            $ref: '#/definitions/errorBody'
        401:
          description: Unauthorized.
          schema:
            $ref: '#/definitions/errorBody'
        404:
          description: Not Found.
          schema:
            $ref: '#/definitions/errorBody'
        default:
          description: Unhandled resource
          schema:
            $ref: '#/definitions/errorBody'
