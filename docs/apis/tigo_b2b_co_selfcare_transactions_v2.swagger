definitions:
  servicesParameters:
    type: object
    properties:
      msisdn:
        type: integer
      operation: 
        type: string
      serviceId: 
        type: integer
  servicesAvailable:
    type: object
    properties:
      code:
        type: integer
      message: 
        type: string
  services:
    type: object
    properties:
      code:
        type: integer
      description: 
        type: string
      name: 
        type: string
      currency: 
        type: string
      serviceCost: 
        type: integer
      status: 
        type: string
    
  # Error Response
  errorBody:
    properties:
      error:
        required:
          - statusCode
          - message
        type: object
        properties:
          statusCode:
            type: string
            description: Http Status Code
            example: "401"
          code:
            type: string
            description: Same as the http status code
            example: "401"
          message:
            type: string
            description: General message for the error
            example: "Not Authorized"
          developerMessage:
            type: string
            description: More precise info about the error
            example: "Access token was not provided or is invalid"