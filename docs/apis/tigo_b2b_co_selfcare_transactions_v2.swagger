swagger: '2.0'
info:
    version: '2.0.0'
    title: tigo_b2b_co_selfcare_transactions_v2
    description: |
      This is an api in charge of managing the operations of activating / deactivating basic services and checking the 
      status of services to a msisdn for CO Transactions.
    termsOfService: http://swagger.io/terms/
    contact:
        name: Andrea Forneron
        email: andrea.forneron@edge.com.py
        url: https://edge.com.py
    license:
        name: MIT
        url: http://github.com/gruntjs/grunt/blob/master/LICENSE-MIT
host: test.api.tigo.com
basePath: /v2/tigo/b2b/co/transactions
schemes:
    - https
consumes:
    - application/json
produces:
    - application/json
securityDefinitions:
    application:
        type: oauth2
        tokenUrl: https://test.api.tigo.com/oauth/client_credential/accesstoken?grant_type=client_credentials
        flow: application
        scopes:
            read: Customer B2B Transactions 
security:
  - application:
    - read    
