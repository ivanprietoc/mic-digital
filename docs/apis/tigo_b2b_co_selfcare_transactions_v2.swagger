parameters:
  msisdn:
    name: msisdn
    in: path
    required: true
    type: integer
    description: Is the customer msisdn.
  servicesParameters:
    name: servicesParameters
    in: body
    required: true
    schema: 
      $ref: '#/definitions/servicesParameters'
    description: "Parameters needed to enable or disable a service"
  authorization:
    name: Authorization
    in: header
    required: true
    type: string
    description: 'Access Token provided by the Authorization Url'

