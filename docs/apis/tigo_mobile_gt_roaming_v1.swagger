definitions:
  transactions:
    properties:
      id:
        type: integer
      imsi:
        type: integer
  subscriberGroup:
    properties:
      id:
        type: integer
      imsi:
        type: integer
      packageCode:
        type: string
      transactionId: 
        type: integer
  imsiList:
    properties:
      message:
        type: string
      transactionId: 
        type: integer
  # Error Response
  errorBody:
    properties:
      error:
        required:
          - statusCode
          - message
        type: object
        properties:
          statusCode:
            type: string
            description: Http Status Code
            example: "401"
          code:
            type: string
            description: Same as the http status code
            example: "401"
          message:
            type: string
            description: General message for the error
            example: "Not Authorized"
          developerMessage:
            type: string
            description: More precise info about the error
            example: "Access token was not provided or is invalid"