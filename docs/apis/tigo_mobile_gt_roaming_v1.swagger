swagger: '2.0'
info:
    version: '2.0.0'
    title: tigo_mobile_gt_roaming_v1
    description: |
        API related to mobile for GT, which is responsible for removing a profile and a subscription using the imsi as the initial parameter.
    termsOfService: http://swagger.io/terms/
    contact:
        name: Andrea Forneron
        email: andrea.forneron@edge.com.py
        url: https://edge.com.py
    license:
        name: MIT
        url: http://github.com/gruntjs/grunt/blob/master/LICENSE-MIT
host: test.api.tigo.com
basePath: /v1/tigo/mobile/gt/roaming
schemes:
    - https
consumes:
    - application/json
produces:
    - application/json
securityDefinitions:
    application:
        type: oauth2
        tokenUrl: https://test.api.tigo.com/oauth/client_credential/accesstoken?grant_type=client_credentials
        flow: application
        scopes:
            read: "customer imsi"
security:
  - application:
    - read    
