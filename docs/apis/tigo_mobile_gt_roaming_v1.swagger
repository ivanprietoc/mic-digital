parameters:
  transactions: 
    name: transactions
    in: body
    required: true
    schema: 
      $ref: '#/definitions/transactions'
    description: "Parameter needed to eliminate the user's profile"
  subscriberGroup: 
    name: subscriberGroup
    in: body
    required: true
    schema: 
      $ref: '#/definitions/subscriberGroup'
    description: "Parameter needed to eliminate the user's subscription"
  authorization:
    name: Authorization
    in: header
    required: true
    type: string
    description: 'Access Token provided by the Token Url'

