parameters:
  billingId:
    name: billingId
    in: path
    required: true
    type: integer
    description: 'Billing Id (aka Invoice Number)'
  accountId:
    name: accountId
    in: path
    required: true
    type: integer
    description: 'The Account Id to which the Invoice belongs'
  authorization:
    name: Authorization
    in: header
    required: true
    type: string
    description: 'Access Token provided by the Authorization Url'

