  #getBillingPaymentDetailsById
  /bills/{billingId}/accounts/{accountId}:
    get:
      summary: Get the Billing Payment Details by the Billing Id and the Account Id
      description: | 
        Returns the detail of the Payment of an Invoice taking as parameters the Invoice Number and the Account ID to which it belongs.
      tags:
        - billing
      operationId: findBillingPaymentDetailsById
      parameters:
        - $ref: "#/parameters/billingId"
        - $ref: "#/parameters/accountId"
        - $ref: "#/parameters/authorization"
      responses:
        '200':
          description: Successful response.
          schema:
            $ref: '#/definitions/details'
        '400':
          description: Bad Request.
          schema:
            $ref: '#/definitions/errorBody'
        '401':
          description: Unauthorized.
          schema:
            $ref: '#/definitions/errorBody'
        '404':
          description: Not Found.
          schema:
            $ref: '#/definitions/errorBody'
        default:
          description: Unhandled resource.
          schema:
            $ref: '#/definitions/errorBody'
