definitions:
  details:
    type: object
    properties:
      bankName:
        type: string
        description: Payment channel
      paymentAmount:
        type: number
        description: Amount of the invoice
      paymentDate:
        type: string
        description: Payment date of the invoice
      paymentMethod:
        type: number
        description: Payment method
  errorBody:
    properties:
      error: 
        required: 
          - statusCode
          - message
        type: object
        properties:
          statusCode: 
            type: string
            description: Http Status Code
            example: "401"
          code: 
            type: string
            description: Same as the http status code
            example: "401"
          message: 
            type: string
            description: General message for the error
            example: "Not Authorized"
          developerMessage: 
            type: string
            description: More precise info about the error