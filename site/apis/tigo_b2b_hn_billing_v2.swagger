definitions:
  #invoiceCollection
  invoice: 
    type: object
    properties: 
      status:
        type: string
        description: Result of the execution of ws
      message:
        type: string
        description: Shows the message that accompanies the status of the service query
      invoice:
        type: string
        description: Result of the invoice returned in B64 format
      
# Error Response
  errorBody:
    properties:
      error:
        required:
          - statusCode
          - message
        type: object
        properties:
          statusCode:
            type: string
            description: Http Status Code
            example: "401"
          code:
            type: string
            description: Same as the http status code
            example: "401"
          message:
            type: string
            description: General message for the error
            example: "Not Authorized"
          developerMessage:
            type: string
            description: More precise info about the error
            example: "Access token was not provided or is invalid"