parameters:
  msisdn:
    name: msisdn
    in: path
    required: true
    type: string
    description: Customer Msisdn
  invoiceNumber:
    name: invoiceNumber
    in: query
    required: true
    description: Invoice Number Identification
    type: string
  invoiceDate:
    name: invoiceDate
    in: query
    required: true
    description: Date of issue of the invoice
    type: string
  type:
    name: type
    in: query
    required: true
    description: Type of invoice to be returned
    type: string
  typeResult:
    name: typeResult
    in: query
    required: true
    description: Format of the invoice to be returned
    type: string
  authorization:
    name: Authorization
    in: header
    required: true
    type: string
    description: 'Access Token provided by the Authorization Url'


