definitions:
  callsList: 
    type: object
    properties: 
      msisdn:
        type: integer
        description: "List of msisdn"
      startDate:
        type: string
        description: "Initial date of the query"
      endDate:
        type: string
        description: "Final date of the query"
      email:
        type: string
        description: "Mail where the information will be sent"
      user:
        type: string
        description: "User data"
  details:
    properties:
      message:
        type: string
        description: "Backend response message"
  # Error Response
  errorBody:
    properties:
      error:
        required:
          - statusCode
          - message
        type: object
        properties:
          statusCode:
            type: string
            description: Http Status Code
            example: "401"
          code:
            type: string
            description: Same as the http status code
            example: "401"
          message:
            type: string
            description: General message for the error
            example: "Not Authorized"
          developerMessage:
            type: string
            description: More precise info about the error
            example: "Access token was not provided or is invalid"