parameters:
  callsDetails: 
    name: callsDetails
    in: body
    required: true
    schema: 
      $ref: '#/definitions/callsList'
    description: "List of necessary parameters to obtain the detail of the calls "
  authorization:
    name: Authorization
    in: header
    required: true
    type: string
    description: 'Access Token provided by the Authorization Url'


