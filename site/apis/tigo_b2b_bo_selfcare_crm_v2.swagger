swagger: '2.0'
info:
    version: '2.0.0'
    title: tigo_b2b_bo_selfcare_crm_v2
    description: |
        API related to CRM for Bolivia B2B exposes a collection of contracts with the amount of lines and products included in the contract.
    termsOfService: http://swagger.io/terms/
    contact:
        name: Andrea Forneron
        email: andrea.forneron@edge.com.py
        url: https://edge.com.py
    license:
        name: MIT
        url: http://github.com/gruntjs/grunt/blob/master/LICENSE-MIT
host: test.api.tigo.com
basePath: /v2/tigo/b2b/bo/selfcare/crm
schemes:
    - https
consumes:
    - application/json
produces:
    - application/json
securityDefinitions:
    application:
        type: oauth2
        tokenUrl: https://test.api.tigo.com/oauth/client_credential/accesstoken?grant_type=client_credentials
        flow: application
        scopes:
            read: "customer contracts"
security:
  - application:
    - read    
