parameters:
  idType:
    name: idType
    in: path
    description: Customer Id Type
    required: true
    type: integer
  id:
    name: id
    in: path
    description: Client's Document Number
    required: true
    type: integer
  authorization:
    name: Authorization
    in: header
    required: true
    type: string
    description: 'Access Token provided by the Token Url'
