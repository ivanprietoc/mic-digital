      operationId: findcredit-cards
      parameters:
        - name: tags
          in: query
          description: tags to filter by
          required: false
          type: array
          collectionFormat: csv
          items:
            type: string
        - name: limit
          in: query
          description: maximum number of results to return
          required: false
          type: integer
          format: int32
      responses:
        200:
          description: credit-card response
          schema:
            type: array
            items:
              $ref: '#/definitions/Credit-card'
        default:
          description: unexpected error
          schema:
            $ref: '#/definitions/Error'
    post:
      description: Creates a new credit-card in the store.  Duplicates are allowed
      operationId: addCredit-card
      parameters:
        - name: credit-card
          in: body
          description: Credit-card to add to the store
          required: true
          schema:
            $ref: '#/definitions/NewCredit-card'
      responses:
        200:
          description: credit-card response
          schema:
            $ref: '#/definitions/Credit-card'
        default:
          description: unexpected error
          schema:
            $ref: '#/definitions/Error'
  /credit-cards/{id}:
    get:
      description: Returns a user based on a single ID, if the user does not have access to the credit-card
      operationId: find credit-card by id
      parameters:
        - name: id
          in: path
          description: ID of credit-card to fetch
          required: true
          type: integer
          format: int64
      responses:
        200:
          description: credit-card response
          schema:
            $ref: '#/definitions/Credit-card'
        default:
          description: unexpected error
          schema:
            $ref: '#/definitions/Error'
    delete:
      description: deletes a single credit-card based on the ID supplied
      operationId: deleteCredit-card
      parameters:
        - name: id
          in: path
          description: ID of credit-card to delete
          required: true
          type: integer
          format: int64
      responses:
        204:
          description: credit-card deleted
        default:
          description: unexpected error
          schema:
            $ref: '#/definitions/Error'
definitions:
  Credit-card:
    allOf:
      - $ref: '#/definitions/NewCredit-card'
      - required:
        - id
        properties:
          id:
            type: integer
            format: int64
  NewCredit-card:
    required:
      - name
    properties:
      name:
        type: string
      tag:
        type: string
  Error:
    required:
      - code
      - message
    properties:
      code:
        type: integer
        format: int32
      message:
        type: string
