swagger: "2.0"
info:
  version: 1.0.0
  title: Convergent Payment API
  description: From Credit Card Tokenization to Credit Card Processing, this API can be used by any Tigo Web/App to allow users to pay their bills.
  termsOfService: http://swagger.io/terms/
  contact:
    name: Andres Cavallin
    email: andres.cavallin@millicom.com
    url: http://www.millicom.com
  license:
    name: MIT
    url: http://github.com/gruntjs/grunt/blob/master/LICENSE-MIT
host: sandbox.api.tigo.com
basePath: /v1/tigo/{country}/payments
schemes:
  - http
consumes:
  - application/json
produces:
  - application/json
paths:
  /credit-cards:
    get:
      description: |
        Returns all credit-cards from the system that the user has access to
