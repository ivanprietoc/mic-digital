definitions:
  ProductsList:
    type: object
    required: 
      - customerCode
    properties: 
      customerCode: 
        type: integer
      contract:
        type: integer
      msisdn: 
        type: string
      customerName: 
        type: string
      address: 
        type: string
      planCode:
        type: integer
      planDescription: 
        type: string
      planValue: 
        type: integer
# Error Response
  errorBody:
    properties:
      error:
        required:
          - statusCode
          - message
        type: object
        properties:
          statusCode:
            type: string
            description: Http Status Code
            example: "401"
          code:
            type: string
            description: Same as the http status code
            example: "401"
          message:
            type: string
            description: General message for the error
            example: "Not Authorized"
          developerMessage:
            type: string
            description: More precise info about the error
            example: "Access token was not provided or is invalid"