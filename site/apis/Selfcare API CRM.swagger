parameters:
  customerCode:
    name: customerCode
    in: path
    description: Client Code of the Subscriber
    required: true
    type: integer
  offset:
    name: offset
    in: query
    description: Initial number for pagination
    type: integer
  limit:
    name: limit
    in: query
    description: Number of products to be returned
    type: integer
  authorization:
    name: Authorization
    in: header
    required: true
    type: string
    description: 'Access Token provided by the Token Url'

