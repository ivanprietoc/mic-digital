definitions:
  # billingAccountCollection
  billsCollection:
    type: object
    properties:
        contractNo: 
          type: string
          description: Contract number
        billingAddress: 
          type: array
          description: Addresses related to the contract
          items:
            $ref: '#/definitions/address'
        dueDate:
          type: string
          description: Account expiration date
        invoiceCollection:
          type: array
          description: Invoices related to the contract
          items: 
            $ref: '#/definitions/invoice'
  # billingAddressAcount         
  address: 
    type: object
    properties: 
      street: 
        type: string
        description: Customer address
      neighborhood: 
        type: string
        description: Neighborhood where the customer lives
      city: 
        type: string
        description: City ??where the consumer lives
      state: 
        type: string
        description: State where the consumer resides
      country: 
        type: string
        description: Country of residence of the consumer
      zipCode:
        type: string
        description: Customer zipCode 
  #invoiceCollection
  invoice: 
    type: object
    properties: 
      invoiceContractNo:
        type: string
        description: Invoice contract number
      invoiceNumber:
        type: string
        description: Invoice number
      billPeriod: 
        type: string
        description: Billing period
      invoiceAmount:
        type: integer
        description: Total invoice value
      invoiceStatus:
        type: boolean
        description: Invoice Status
# Error Response
  errorBody:
    properties:
      error:
        required:
          - statusCode
          - message
        type: object
        properties:
          statusCode:
            type: string
            description: Http Status Code
            example: "401"
          code:
            type: string
            description: Same as the http status code
            example: "401"
          message:
            type: string
            description: General message for the error
            example: "Not Authorized"
          developerMessage:
            type: string
            description: More precise info about the error
            example: "Access token was not provided or is invalid"