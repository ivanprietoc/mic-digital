parameters:
  id:
    name: id
    in: path
    required: true
    type: number
    description: "The Identifier number related to the Type (the Local Client Number in this case)"
  idType:
    name: idType
    in: path
    required: true
    type: string
    description: "Identification Type (related to the Local Client Number)"
  contractNumber:
    name: contractNumber
    in: query
    required: true
    description: Contract Number Identification
    type: integer
  offset:
    name: pageInit
    in: query
    description: Initial number for pagination
    type: integer
  limit:
    name: quantity
    in: query
    description: Number of bills to be returned
    type: integer
  authorization:
    name: Authorization
    in: header
    required: true
    type: string
    description: 'Access Token provided by the Authorization Url'


