parameters:
  id:
    name: id
    in: path
    required: true
    type: integer
    description: Is the document number.
  idType:
    name: idType
    in: path
    required: true
    type: string
    description: Type of document.
  movil:
    name: movil
    in: query
    required: true
    type: integer
    description: Msisdn to consult.
  segment:
    name: segment
    in: query
    required: false
    type: string
    description: Segment to consult can be one of the CORPORATE / MASIVE values.
  document:
    name: document
    in: query
    required: false
    type: string
    description: Corresponds to the id of the document found in computer.
  additional:
    name: additional
    in: query
    required: false
    type: string
    description: Additional parameters.
  authorization:
    name: Authorization
    in: header
    required: true
    type: string
    description: 'Access Token provided by the Authorization Url'

