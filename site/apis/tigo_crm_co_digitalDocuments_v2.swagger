swagger: '2.0'
info:
    version: '2.0.0'
    title: tigo_crm_co_digitalDocuments_v2
    description: |
     This is an API that allows you to obtain the url of the digital document (Contract) for massive clients as well as for corporate clients.
    termsOfService: http://swagger.io/terms/
    contact:
        name: Andrea Forneron
        email: andrea.forneron@edge.com.py
        url: https://edge.com.py
    license:
        name: MIT
        url: http://github.com/gruntjs/grunt/blob/master/LICENSE-MIT
host: test.api.tigo.com
basePath: /v2/tigo/crm/co/digitalDocuments
schemes:
    - https
consumes:
    - application/json
produces:
    - application/json
securityDefinitions:
    application:
        type: oauth2
        tokenUrl: https://test.api.tigo.com/oauth/client_credential/accesstoken?grant_type=client_credentials
        flow: application
        scopes:
            read: Customer CRM 
security:
  - application:
    - read    
